<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Creating a ImageView-->
    <ImageView
        android:id="@+id/imgListSongCover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background" />

    <!--Creating a TextView-->
    <TextView
        android:id="@+id/tvListSongTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imgListSongCover"
        android:padding="5dp"
        android:text="Waqaba Umusa"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_toRightOf="@+id/imgListSongCover"
        android:layout_below="@+id/tvListSongTitle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvListArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thamsanqa Shabalala"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvListSongDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=".4:19"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

    </LinearLayout>
</RelativeLayout>