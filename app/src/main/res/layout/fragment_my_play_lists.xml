<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="#000000"
    tools:context=".ui.playList.MyPlayListsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mnotes">

        <ListView
            android:layout_margin="16dp"
            android:id="@+id/lstPlayListName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnAddToPlayList"
            android:dividerHeight="3dp" />

        <Button
            android:id="@+id/btnAddToPlayList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundbutton"
            android:text="ADD"
            android:textColor="@color/colorTransparentWhite"
            app:fontFamily="@font/josefinslabbold" />

    </RelativeLayout>


</RelativeLayout>