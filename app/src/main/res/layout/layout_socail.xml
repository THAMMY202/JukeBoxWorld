<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSocailIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_right_margin"
        android:scaleType="centerCrop"
        android:src="@android:drawable/alert_dark_frame" />

    <TextView
        android:layout_toRightOf="@+id/imgSocailIcon"
        android:id="@+id/tvSocailTitle"
        android:text="Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSocailUrl"
        android:layout_toRightOf="@+id/imgSocailIcon"
        android:layout_below="@+id/tvSocailTitle"
        android:text="Not added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
